<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".SignInActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_image"
            android:layout_marginTop="66dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_github"/>

    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_image"
            android:id="@+id/tv_id"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:text="깃허브 아이디"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/week3_black"
            tools:text="깃허브 아이디"/>

    <EditText android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/idEditText"
              android:hint="깃허브 아이디를 입력해주세요."
              android:background="@drawable/edit_text"
              android:textColorHint="#acb5bd"
              android:textSize="14sp"
              android:fontFamily="@font/noto_sans_kr_regular"
              app:layout_constraintTop_toBottomOf="@+id/tv_id"
              app:layout_constraintStart_toStartOf="@+id/tv_id"
              app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_pw"
              android:text="비밀번호"
              android:textStyle="bold"
              android:textColor="@color/week3_black"
              android:layout_marginTop="34dp"
              android:textSize="14sp"
              app:layout_constraintStart_toStartOf="@id/tv_id"
              app:layout_constraintTop_toBottomOf="@+id/idEditText"/>

    <EditText android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/pwEditText"
              android:background="@drawable/edit_text"
              android:hint="비밀번호를 입력해주세요."
              android:textColorHint="#acb5bd"
              android:textSize="14sp"
              android:fontFamily="@font/noto_sans_kr_regular"
              android:inputType="numberPassword"
              app:layout_constraintTop_toBottomOf="@+id/tv_pw"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_login"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="74dp"
            android:text="로그인"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:background="@drawable/button"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingClass"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_signUpText"
            android:text="계정이 없으신가요?"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#828282"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/iv_image"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="계정이 없으신가요?"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_signUpText"
            app:layout_constraintBottom_toBottomOf="@+id/tv_signUpText"
            app:layout_constraintStart_toEndOf="@+id/iv_image"
            android:id="@+id/tv_signUp"
            android:background="@color/white"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#828282"
            android:text="회원 가입"
            tools:text="회원가입"/>

</androidx.constraintlayout.widget.ConstraintLayout>