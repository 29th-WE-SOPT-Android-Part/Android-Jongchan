<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_title"
              android:text="SOPTHub"
              android:textSize="32sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_margin="30dp"
    />
    <ImageView android:layout_width="150dp"
               android:layout_height="150dp"
               android:id="@+id/iv_image"
               app:layout_constraintDimensionRatio="1:1"
               app:layout_constraintTop_toBottomOf="@id/tv_title"
               android:layout_margin="30dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:srcCompat="@drawable/dogi"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_nameTitle"
              android:text="이름"
              android:textSize="22sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@id/iv_image"
              android:layout_marginTop="30dp"
              android:layout_marginRight="150dp"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_name"
              android:text="이종찬"
              android:textSize="22sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="@id/tv_nameTitle"
              android:layout_marginLeft="150dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_ageTitle"
              android:text="나이"
              android:textSize="22sp"
              app:layout_constraintTop_toBottomOf="@+id/tv_nameTitle"
              app:layout_constraintStart_toStartOf="@id/tv_nameTitle"
              app:layout_constraintEnd_toEndOf="@id/tv_nameTitle"
              android:layout_marginTop="20dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_age"
              android:text="24"
              android:textSize="22sp"
              app:layout_constraintTop_toBottomOf="@id/tv_name"
              app:layout_constraintStart_toStartOf="@id/tv_name"
              app:layout_constraintEnd_toEndOf="@id/tv_name"
              android:layout_marginTop="20dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_MBTI_Title"
              android:text="MBTI"
              android:textSize="22sp"
              app:layout_constraintTop_toBottomOf="@+id/tv_ageTitle"
              app:layout_constraintStart_toStartOf="@id/tv_ageTitle"
              app:layout_constraintEnd_toEndOf="@id/tv_ageTitle"
              android:layout_marginTop="20dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_MBTI"
              android:text="ESTJ"
              android:textSize="22sp"
              app:layout_constraintTop_toBottomOf="@id/tv_age"
              app:layout_constraintStart_toStartOf="@id/tv_age"
              app:layout_constraintEnd_toEndOf="@id/tv_age"
              android:layout_marginTop="20dp"/>
    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/ib_githubButton"
                 app:layout_constraintStart_toStartOf="@id/iv_image"
                 app:layout_constraintEnd_toEndOf="@id/iv_image"
                 app:layout_constraintTop_toBottomOf="@+id/tv_MBTI_Title"
                 android:layout_marginTop="30dp"
                 android:adjustViewBounds="true"
                 android:background="@android:color/transparent"
                 android:src="@drawable/github"
    />

    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ib_githubButton">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="안녕하세요 이종찬입니다."
