<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".view.Activity.SignInActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_signUp"
            android:text="회원가입"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/week3_black"
            android:textStyle="bold"
            android:fontFamily="@font/noto_sans_kr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:layout_marginTop="50dp"
            android:text="이름"
            android:fontFamily="@font/noto_sans_kr"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/week3_black"
            app:layout_constraintTop_toBottomOf="@+id/tv_signUp"
            app:layout_constraintStart_toStartOf="@id/tv_signUp"
    />
    <EditText android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/et_name"
              android:layout_marginTop="5dp"
              android:paddingLeft="16dp"
              android:hint="이름을 입력해주세요."
              android:background="@drawable/edit_text"
              android:textColorHint="#acb5bd"
              android:textSize="14sp"
              android:fontFamily="@font/noto_sans_kr_regular"
              app:layout_constraintTop_toBottomOf="@+id/tv_name"
              app:layout_constraintStart_toStartOf="@+id/tv_name"
              app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_name"
            android:id="@+id/tv_id"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:text="깃허브 아이디"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/week3_black"
            tools:text="깃허브 아이디"/>

    <EditText android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/et_id"
              android:hint="깃허브 아이디를 입력해주세요."
              android:background="@drawable/edit_text"
              android:textColorHint="#acb5bd"
              android:paddingLeft="16dp"
              android:textSize="14sp"
              android:fontFamily="@font/noto_sans_kr_regular"
              app:layout_constraintTop_toBottomOf="@+id/tv_id"
              app:layout_constraintStart_toStartOf="@+id/tv_id"
              app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_pw"
              android:text="비밀번호"
              android:textStyle="bold"
              android:textColor="@color/week3_black"
              android:layout_marginTop="40dp"
              android:textSize="14sp"
              app:layout_constraintStart_toStartOf="@id/tv_id"
              app:layout_constraintTop_toBottomOf="@+id/et_id"/>

    <EditText android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/et_pw"
              android:layout_marginTop="6dp"
              android:background="@drawable/edit_text"
              android:hint="비밀번호를 입력해주세요."
              android:textColorHint="#acb5bd"
              android:paddingLeft="16dp"
              android:textSize="14sp"
              android:fontFamily="@font/noto_sans_kr_regular"
              android:inputType="numberPassword"
              app:layout_constraintTop_toBottomOf="@+id/tv_pw"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_signup"
            app:layout_constraintTop_toBottomOf="@id/et_pw"
            android:text="회원가입"
            android:layout_marginTop="67dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:background="@drawable/button"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingClass"/>

</androidx.constraintlayout.widget.ConstraintLayout>